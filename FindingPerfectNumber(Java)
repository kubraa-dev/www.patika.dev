import java.util.Scanner;

public class calisma {
    public static void main(String[] args) {

        Scanner inp = new Scanner(System.in);
        
        int number, total = 0;

        System.out.print("Number a enter : ");
        number = inp.nextInt();



        for (int i = 1; i < number; i++) {
            if (number % i == 0) {
                total = total + i;
            }
        }
            if (total == number) {
                System.out.print(total +" is perfect number.");
            }else {
                System.out.print(total +" isnt perfect number.");
            }
    }
}

