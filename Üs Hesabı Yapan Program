import java.util.Scanner;

public class deneme {

    static int power(int a, int b) {


        int result = 1;
        for (int i = 1; i < b; i++) {
            result *= a;
        }
        if (b == 0) {
            result = 1;
        }
        return result;

    }

    public static void main(String[] args) {
        Scanner inp = new Scanner(System.in);

        boolean islem = true;

        while (islem) {

            System.out.print("Taban sayısı giriniz: ");
            int a = inp.nextInt();

            System.out.print("Üst değerini giriniz: ");
            int b = inp.nextInt();


            System.out.println("Sonuç: " + power(a, b));

        }
    }

    }
