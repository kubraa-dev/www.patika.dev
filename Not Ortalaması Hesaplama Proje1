import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        int mat,turkce,fizik,kimya,tarih,muzik;
        // scanner sınıfını tanımla
        Scanner inp= new Scanner(System.in);

        // kullanicidan degeri girmesini iste
        System.out.print("Matematik notunu giriniz:");
        mat= inp.nextInt();

        System.out.print("Türkçe notunu giriniz:");
        turkce= inp.nextInt();

        System.out.print("Fizik notunu giriniz:");
        fizik= inp.nextInt();

        System.out.print("Kimya notunu giriniz:");
        kimya= inp.nextInt();

        System.out.print("Tarih notunu giriniz:");
        tarih= inp.nextInt();

        System.out.print("Müzik notunu giriniz:");
        muzik= inp.nextInt();

    // İşlemi devreye sokalım
        int toplam= (mat+fizik+kimya+muzik+turkce);
        double sonuc= toplam/6;
        System.out.println("Not ortalaması:"+ sonuc);
        
        // Eğer 60'dan büyükse True yazacak şekilde kodlayalım
         boolean kosul1= sonuc>60;
         System.out.println("60dan büyüktür="+ kosul1);
